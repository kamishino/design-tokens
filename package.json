{
  "name": "@your-org/kami-design-tokens",
  "version": "1.0.0",
  "description": "Centralized design tokens repository - Single Source of Truth for design values across all platforms",
  "main": "dist/js/tokens.js",
  "module": "dist/js/tokens.mjs",
  "types": "dist/js/tokens.d.ts",
  "style": "dist/css/variables.css",
  "exports": {
    ".": {
      "import": "./dist/js/tokens.mjs",
      "require": "./dist/js/tokens.js",
      "types": "./dist/js/tokens.d.ts"
    },
    "./css": "./dist/css/variables.css",
    "./scss": "./dist/scss/_variables.scss",
    "./json": "./dist/json/tokens.json",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "docs",
    "tokens",
    "README.md",
    "LICENSE",
    "WORKFLOW.md"
  ],
  "scripts": {
    "dev": "npm run build:tokens && npm run build:utilities && vite",
    "build": "npm run clean && npm run validate && npm run build:tokens && npm run build:utilities && npm run build:preview",
    "build:tokens": "node scripts/build-tokens.js",
    "build:utilities": "node scripts/build-utilities.js",
    "build:preview": "vite build",
    "preview": "vite preview",
    "clean": "rimraf dist docs",
    "validate": "node scripts/validate-tokens.js",
    "test": "node scripts/test-tokens.js",
    "prepublishOnly": "npm run build && npm test",
    "pack:dry": "npm pack --dry-run"
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "tokens",
    "theme",
    "css-variables",
    "scss",
    "style-dictionary"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/kami-design-tokens.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/kami-design-tokens/issues"
  },
  "homepage": "https://github.com/your-org/kami-design-tokens#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.0",
    "glob": "^8.1.0",
    "rimraf": "^3.0.2",
    "style-dictionary": "^3.8.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
