{
  "name": "@your-org/kami-design-tokens",
  "version": "1.0.0",
  "description": "Centralized design tokens repository - Single Source of Truth for design values across all platforms",
  "type": "module",
  "main": "dist/js/tokens.js",
  "module": "dist/js/tokens.mjs",
  "types": "dist/js/tokens.d.ts",
  "style": "dist/css/variables.css",
  "exports": {
    ".": {
      "import": "./dist/js/tokens.mjs",
      "require": "./dist/js/tokens.js",
      "types": "./dist/js/tokens.d.ts"
    },
    "./css": "./dist/css/variables.css",
    "./scss": "./dist/scss/_variables.scss",
    "./json": "./dist/json/tokens.json",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "scripts",
    "server",
    "site",
    "docs",
    "database",
    "tokens",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "npm run build:core && concurrently \"npm run server:dev\" \"npm run site:serve\" --names \"server,site\" --prefix-colors \"blue,green\"",
    "build": "npm run clean && npm run build:core && npm run build:exports && npm run build:site",
    "build:core": "npm run tokens:scale && npm run tokens:validate && npm run tokens:compile",
    "build:exports": "npm run tokens:export-backend && npm run tokens:export-utils && npm run tokens:export-figma",
    "build:site": "npm run site:build",
    "test": "npm run tokens:test",
    "clean": "rimraf dist docs",
    "prepublishOnly": "npm run build && npm run test",
    "pack:dry": "npm pack --dry-run",
    "tokens:scale": "node scripts/generate-type-scale.js",
    "tokens:compile": "node scripts/build-tokens.js",
    "tokens:validate": "node scripts/validate-tokens.js",
    "tokens:test": "node scripts/validate-tokens.js",
    "tokens:watch": "nodemon --watch tokens --ignore tokens/generated --ext json --exec \"npm run build:core && npm run build:exports\"",
    "tokens:export-backend": "node scripts/build-backend.js",
    "tokens:export-figma": "node scripts/optimize-for-figma.js",
    "tokens:export-utils": "node scripts/build-utilities.js",
    "server:dev": "nodemon server/index.js",
    "server:start": "node server/index.js",
    "site:build": "vite build",
    "site:serve": "vite --open /design-tokens/",
    "site:preview": "npm run site:build && vite preview",
    "tasks:archive": "node scripts/archive-tasks.js",
    "health:cdn": "node scripts/check-cdn.js",
    "project:clone": "node scripts/clone-project.js",
    "test:supabase": "node scripts/test-supabase.js"
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "tokens",
    "theme",
    "css-variables",
    "scss",
    "style-dictionary"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/kami-design-tokens.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/kami-design-tokens/issues"
  },
  "homepage": "https://github.com/your-org/kami-design-tokens#readme",
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "@types/prismjs": "^1.26.5",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "prismjs": "^1.30.0",
    "react-select": "^5.10.2",
    "react-simple-code-editor": "^0.14.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "ajv": "^8.12.0",
    "chalk": "^4.1.2",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.1.0",
    "glob": "^8.1.0",
    "nodemon": "^3.1.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "style-dictionary": "^3.8.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
