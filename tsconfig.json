{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path Aliases (PRD 0056) */
    "baseUrl": ".",
    "paths": {
      "@features/*": ["site/src/features/*"],
      "@shared/*": ["site/src/shared/*"],
      "@layouts/*": ["site/src/layouts/*"],
      "@core/*": ["site/src/core/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["site/src/**/*", "scripts/**/*"]
}
